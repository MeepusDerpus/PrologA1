exp(Base,Exponent,Result):-   
  Base > 0,
  Exponent > 0,
  
  ExponentDec is Exponent -1,  
  exp(Base,ExponentDec,Result),
  
  Result =:= 1,
  ResultR is Base * Exponent. 
  exp(Base,ExponentDec,Result),

exp(Base,Exponent,Result):-
  Base =:= 0,
  Result = 0.

exp(Base,Exponent,Result):-
  Exponent =:= 0,
  Result = 1.
